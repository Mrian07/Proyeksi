<% html_title t(:label_password_lost) %>
<%= toolbar title: t(:label_password_lost) %>
<section class="form--section">
  <%= styled_form_tag({ action: "lost_password" }) do %>
    <div class="form--field -required">
      <%= styled_label_tag 'mail', User.human_attribute_name(:mail) %>
      <span class="form--field-container">
        <%= styled_text_field_tag 'mail', nil, size: 40, container_class: '-middle' %>
      </span>
    </div>
    <%= styled_button_tag t(:button_submit), class: '-highlight -with-icon icon-checkmark' %>
  <% end %>
</section>
