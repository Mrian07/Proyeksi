
<div class="form--field -required">
  <%= form.text_field(:url,
                      label: t('repositories.git.path'),
                      size: 60,
                      required: true) %>
  <div class="form--field-instructions">
    <%= raw t('repositories.git.instructions.path', example_path: '<code>/path/to/repository/.git</code>') %>
  </div>
</div>
<div class="form--field -required">
  <%= form.select(:path_encoding,
                  git_path_encoding_options(repository),
                  label: t('repositories.git.path_encoding')) %>
  <div class="form--field-instructions">
    <%= t('repositories.git.instructions.path_encoding') %>
  </div>
</div>
